{
    "name": "symfony/framework-standard-edition",
    "description": "The \"Symfony Standard Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",

        "symfony/symfony": "~2.4.2",
        "symfony/assetic-bundle": "~2.3.0",
        "symfony/monolog-bundle": "~2.5.0",
        "symfony/swiftmailer-bundle": "~2.3.5",

        "doctrine/orm": "~2.4.2",
        "doctrine/doctrine-bundle": "~1.2.0",

        "friendsofsymfony/comment-bundle": "dev-master",
        "friendsofsymfony/user-bundle": "~1.3.3",

        "guzzle/guzzle": "~3.8.1",

        "hwi/oauth-bundle": "0.3.2",

        "jms/security-extra-bundle": "~1.5.1",
        "jms/di-extra-bundle": "~1.4.0",

        "ornicar/akismet-bundle": "dev-master",

        "sensio/buzz-bundle": "~1.0.0",
        "sensio/distribution-bundle": "~2.3.4",

        "twig/extensions": "~1.0.1",

        "friendsofsymfony/rest-bundle": "~1.2.2",
        "jms/serializer-bundle": "0.13.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
